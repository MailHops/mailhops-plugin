{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "4.4.2",
  "author": "Hopsware LLC",
  "developer": {
    "name": "Andrew Van Tassel",
    "url": "https://www.mailhops.com"
  },
  "applications": {
    "gecko": {
      "id": "thunderbird@mailhops.com",
      "strict_min_version": "122.0"
    }
  },
  "default_locale": "en",
  "icons": {
    "32": "images/mailhops32.png"
  },
  "options_ui": {
    "page": "content/preferences.html",
    "open_in_tab": true
  },
  "permissions": [
    "accountsRead",
    "messagesRead",
    "messagesUpdate",
    "storage"
  ],
  "message_display_action": {
  },
  "background": {
    "scripts": [
      "js/utils.js", 
      "js/mailhops.js", 
      "js/preferences.js", 
      "js/bootstrap.js"
    ]
  }
}
